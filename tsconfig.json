{
  "compilerOptions": {
    "outDir"                  : "./lib",
    "lib"                     : ["es5", "es6", "es2019"],
    "target"                  : "ES2019",
    "module"                  : "commonjs",
    "moduleResolution"        : "node",
    "emitDecoratorMetadata"   : true,
    "experimentalDecorators"  : true,
    "sourceMap"               : true,
    "esModuleInterop"         : true,
    "declaration"             : true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}